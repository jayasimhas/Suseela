<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <hooks>
      <hook type="Sitecore.Support.SolrStatusMonitor, Sitecore.Support.391039" />
    </hooks>
	<settings>
      <!--  SITECORE SUPPORT SolrStatusMonitor INTERVAL
            Indicates how often Sitecore check for availability of Solr server.
            Default value: 10 seconds
      -->
      <setting name="ContentSearch.SolrStatusMonitor.Interval" value="00:00:10"/>
	</settings>
  </sitecore>
</configuration>
