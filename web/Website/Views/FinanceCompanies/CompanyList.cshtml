@model  Informa.Web.ViewModels.FinanceCompanies.AllCompanyListModel
<div class="messaging_webUsers article-sidebar">
    <h2>@Model.ComponentTitle</h2>
    <div class="companyList">
        <ul>
            @foreach (var company in Model.FinanceCompanies)
            {
                <li class="article-topics__li">
                    <a href="/@company._Parent._Name/@company._Name">@company.Companyname</a>
                </li>
            }
        </ul>
    </div>
</div>
