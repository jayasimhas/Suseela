<div>
    <div class="id-merges-acquisition">
        <div class="merges-form">
            <div class="merge-heading clearfix">
                <p>@Model.TableTitle</p>
                <a href="#" class="merge-acordian">
                    <svg class="sorting-arrows__arrow sorting-arrows__arrow--down">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/dist/img/svg-sprite.svg#sorting-arrow-table"></use>
                    </svg>
                </a>
            </div>
            <div class="merge-form-items">
                <div class="clearfix">
                    <div class="controls">
                        <div class="forms">
                            <a href="#" class="show-largest-btn" data-large="1000">@Model.ShowLargest</a>
                        </div>
                        <div class="forms">
                            <select class="idYearSelect">
                                @{
                                    int mob_curYear = DateTime.Now.Year;
                                    string mob_curUrl = @HttpContext.Current.Request.RawUrl.Split('?')[0] + "?year=";
                                    string mob_selectedYear = @HttpContext.Current.Request.QueryString["year"];
                                    <option value="@mob_curYear" data-href="@mob_curUrl@mob_curYear">Latest</option>
                                    for (int i = 0; i <= 6; i++)
                                    {
                                        mob_curYear--;
                                        if (mob_curYear.ToString() == mob_selectedYear)
                                        {
                                            <option value="@mob_curYear" data-href="@mob_curUrl@mob_curYear" selected>@mob_curYear</option>
                                        }
                                        else
                                        {
                                            <option value="@mob_curYear" data-href="@mob_curUrl@mob_curYear">@mob_curYear</option>
                                        }

                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="forms">
                        <label>@Model.Month</label>
                        <input type="text" deal="Month" name="">
                    </div>
                    <div class="forms">
                        <label>@Model.Aquirer</label>
                        <input type="text" deal="Acquirer" name="">
                    </div>
                    <div class="forms">
                        <label>@Model.Target</label>
                        <input type="text" deal="Target" name="">
                    </div>
                    <div class="forms">
                        <label>@Model.TargetSector</label>
                        <input type="text" deal="TargetSector" name="">
                    </div>
                    <div class="forms">
                        <label>Target Location</label>
                        <input type="text" deal="TargetLocation" name="">
                    </div>
                    <div class="forms">
                        <label>@Model.Detail</label>
                        <input type="text" deal="Detail" name="">
                    </div>
                    <div class="forms">
                        <label>@Model.Price</label>
                        <input type="text" class="filter-box range-field start" deal="Price" name="">
                        To
                        <input type="text" class="filter-box range-field end" deal="Price" name="">
                    </div>

                </div>
            </div>
        </div>
        <div class="graphs-container">
            <h4>@Model.Dashboard</h4>
            <div class="graphs clearfix">
                @{
                    foreach (var Graph in Model.AMGraphs)
                    {
