<div id="search-facet-01" class="search__facets search__left-sidebar" ng-controller="InformaFacetController as allFacets"><!-- removed classes "search-facet, search-facet--expand-short search-facet--list" -->

  <div class="facets__header">
    <h3>Filter By</h3>
    <button class="facets__button facets__button--clear" ng-click="allFacets.clearAllFacets()">Clear All</a>
  </div>

  <div class="facets__content">

    <div class="facets__section" ng-repeat="group in allFacets.facetGroups">
      <h4 class="facets__section-header">{{ group.label }}</h4>
      <ul class="facets__section-list" ng-repeat="f in group.facets | limitTo:limit">
        <li ng-if="f.label.length > 0">
          <input id="{{ group.id }}-{{ $index }}"
          type="checkbox"
          class="visuallyhidden"
          ng-checked="f.selected"
          ng-model="f.selected"
          ng-change="allFacets.update()">
          <label ng-if="f.label" for="{{ group.id }}-{{ $index }}">{{ f.label }} ({{f.count}})</label>
        </li>
      </ul>
      <button 
        class="facets__button facets__button--more" 
        ng-click='group.loadMore()' 
        ng-class="{ 'hidediv': ismore }"
        ng-if='group.facets.length > 5'>See All</button>
      <button 
        class="facets__button facets__button--less" 
        ng-click='loadLess()' 
        ng-class="{ 'hidediv': !ismore }">See Less</button>
    </div>

      <!-- HARDCODED DATE FACET -->
    <div class="facets__section">
      <h4 class="facets__section-header">Date</h4>
        <ul class="facets__section-list">

            <li ng-repeat="dateFilter in allFacets.DateFilters">
                <input type="radio" name="date-facet" id="{{dateFilter.key}}" ng-click="allFacets.dateRangeSearch('date', dateFilter.key)">
                <label for="{{dateFilter.key}}">{{dateFilter.label}}</label>
            </li>

            <li><input type="radio" name="date-facet" id="custom-range"><label for="custom-range">Select date range</label>
                <div class="facets__field-group facets__field-group--from">
                    <legend>From</legend>
                    <input type="date" placeholder="dd/mm/yyyy">
                    <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/dist/img/svg-sprite.svg#calendar"></use></svg>
                </div>
                <div class="facets__field-group facets__field-group--to">
                    <legend>To</legend>
                    <input type="date" placeholder="dd/mm/yyyy">
                    <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/dist/img/svg-sprite.svg#calendar"></use></svg>
                </div>
            </li>
        </ul>
    </div>



