<!-- SEARCH FILTERS IN LEFT RAIL -->

<div id="search-facet-01" class="search__facets search__left-sidebar"ng-controller="searchFacetsController as allFacets"><!-- removed classes "search-facet, search-facet--expand-short search-facet--list" -->

  <div class="facets__header">
    <h3>Filter By</h3>
    <a class="facets__clear js-clear-all-filters">Clear All</a>
  </div>

  <div class="facets__content">

    <div class="facets__section" ng-repeat="group in allFacets.facetGroups">
      <h4 class="facets__section-header">{{ group.label }}</h4>
      <ul class="facets__section-list" ng-repeat="f in group.facets">
        <li>
          <input id="{{ group.id }}-{{ $index }}"
          type="checkbox"
          class="visuallyhidden"
          ng-checked="f.selected"
          ng-model="f.selected"
          ng-change="allFacets.update()">
          <label ng-if="f.label" for="{{ group.id }}-{{ $index }}">{{ f.label }} ({{f.count}})</label>
        </li>
      </ul>
    </div>

    <!-- HARDCODED DATE FACET -->
    <div class="facets__section">
      <h4 class="facets__section-header">Date</h4>
      <ul class="facets__section-list">
          <li><input type="radio" name="date-facet" id="last-24hrs"><label for="last-24hrs">Last 24 hours</label></li>
          <li><input type="radio" name="date-facet" id="last-3days"><label for="last-3days">Last 3 days</label></li>
          <li><input type="radio" name="date-facet" id="last-week"><label for="last-week">Last week</label></li>
          <li><input type="radio" name="date-facet" id="last-month"><label for="last-month">Last month</label></li>
          <li><input type="radio" name="date-facet" id="last-year"><label for="last-year">Last year</label></li>
          <li><input type="radio" name="date-facet" id="custom-range"><label for="custom-range">Select date range</label>
              <div class="facets__field-group facets__field-group--from">
                <legend>From</legend>
                <input type="date" placeholder="dd/mm/yyyy">
                <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/dist/img/svg-sprite.svg#calendar"></use></svg>
              </div>
              <div class="facets__field-group facets__field-group--to">
                <legend>To</legend>
                <input type="date" placeholder="dd/mm/yyyy">
                <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/dist/img/svg-sprite.svg#calendar"></use></svg>
            </div>
          </li>
      </ul>
    </div>



