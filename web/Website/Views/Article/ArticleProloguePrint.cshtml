@model Informa.Web.ViewModels.IArticleProloguePrintViewModel
<style>
    .clickable {
        cursor: pointer;
    }
</style>
<li class="article-prologue__share-item pop-out__trigger @( Model.IsUserAuthenticated ? "" : "js-pop-out-trigger" )"
    data-pop-out-type="sign-in"
    data-pop-out-align="center"
@(Model.IsUserAuthenticated ? "onclick='windows.print();'" : string.Empty)>
    <span class="article-prologue__share-label">Print</span>
    <svg class="article-prologue__share-icon click-utag" data-info='{"event_name" : "article-print-icon"}'>
        <use xlink:href="/dist/img/svg-sprite.svg#print"></use>
    </svg>
</li>
