@model IArticlePrologueBookmarkViewModel
<li	class="article-prologue__share-item pop-out__trigger @( Model.IsUserAuthenticated ? "" : "js-pop-out-trigger" )"
	data-pop-out-type="sign-in">
	<span class="article-prologue__share-label">
		@( Model.IsArticleBookmarked ? Model.BookmarkedText : Model.BookmarkText )
	</span>
	<svg class="article-prologue__share-icon article-prologue__share-icon--bookmark">
		<use xlink:href="/dist/img/svg-sprite.svg#@( Model.IsArticleBookmarked ? "bookmarked" : "bookmark" )"></use>
	</svg>
</li>
