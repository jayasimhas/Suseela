@model IArticlePrologueBookmarkViewModel
<li	class="article-prologue__share-item pop-out__trigger click-utag @( Model.IsUserAuthenticated ? "js-bookmark-article" : "js-pop-out-trigger" )"
	data-pop-out-type="sign-in"
	data-pop-out-align="right"
    data-bookmark-id="@Model.Article._Id"
    @( Model.IsArticleBookmarked ? "data-is-bookmarked=true" : null) data-info='{"event_name":"bookmarked"}'>

    @* Storing "bookmark" / "bookmarked" labels in data attributes so Javascript
		can use text provided by Sitecore when toggling state post-load. *@
	<span 	class="article-prologue__share-label js-bookmark-label"
			data-label-bookmark="@Model.BookmarkText"
			data-label-bookmarked="@Model.BookmarkedText">
		@( Model.IsArticleBookmarked ? Model.BookmarkedText : Model.BookmarkText )
	</span>
	<svg class="article-prologue__share-icon article-prologue__share-icon--bookmark">
		<use xlink:href="/dist/img/svg-sprite.svg#@( Model.IsArticleBookmarked ? "bookmarked" : "bookmark" )"></use>
	</svg>
</li>
