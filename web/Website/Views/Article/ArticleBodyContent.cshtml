@using Glass.Mapper.Sc.Web.Mvc
@using Informa.Web.TestData
@using Sitecore.ExperienceAnalytics.Client
@model Informa.Models.Informa.Models.sitecore.templates.User_Defined.Pages.IArticle

<div class="article-body-content">
    <h6>Publication Name</h6>
    <h1>@Model.Title</h1>
    <h3>@Model.Sub_Title</h3>
    @*<div class="article-preview__metadata">
        <div class="article-preview__category">@Model.Article_Category</div>
    </div>*@

    <div class="article-metadata">
        <ul>
            <li>
                <time class="article-metadata__date">@Model.Actual_Publish_Date.ToString("dd MMM yyyy")</time>
            </li>
            <li>
                <h6>@Model.Content_Type</h6>
            </li>
            <li>
                @* * *  ARTICLE MEDIA TYPE
                            IIPP-116

                    * * * TEXT — Nothing. Remove this <li> entirely.

                    * * * VIDEO
                    <svg class="article-metadata__media-type">
                        <use xlink:href="/dist/img/svg-sprite.svg#video"></use>
                    </svg>

                    * * * AUDIO
                    <svg class="article-metadata__media-type">
                        <use xlink:href="/dist/img/svg-sprite.svg#audio"></use>
                    </svg>

                    * * * DATA *@
                <svg class="article-metadata__media-type">
                    <use xlink:href="/dist/img/svg-sprite.svg#chart"></use>
                </svg>
                @* * *  END ARTICLE MEDIA TYPE *@
            </li>
        </ul>
    </div>


    @* * *  ARTICLE - FEATURED IMAGE
        IIPP-117 *@
    <aside class="article-inline-image">
        <img src="http://lorempixel.com/800/450/technics">
        <span class="article-inline-image__source">Image Source: Associated Press</span>
        <span class="article-inline-image__caption">Image caption goes here</span>
    </aside>
    @* * *  END ARTICLE - FEATURED IMAGE *@

    @* MULTIPLE AUTHORS *@
    <div class="article-author">
        <ul class="article-author__list">
            @foreach (var author in Enumerable.Range(0, 3))
            {
                <li>
                    <span class="article-author__name">Donna Young</span>
                    <span class="article-author__contact">
                                <a href="#">&#64;DonnaYoung</a>
                                <a href="#">donnayoung&#64;emaildomain.com</a>
                            </span>
                </li>
            }
        </ul>
    </div>
    @* END MULTIPLE AUTHORs *@

    @* SINGLE AUTHOR*@
    <div class="article-author article-author--solo">
        <ul class="article-author__list">
            <li>
                <img src="http://placehold.it/200x200" class="article-author__photo">
                <div class="article-author__solo-wrapper">
                    <span class="article-author__name">Donna Young</span>
                    <span class="article-author__contact">
                            <a href="#">&#64;DonnaYoung</a>
                            <a href="#">donnayoung&#64;emaildomain.com</a>
                        </span>
                </div>
            </li>
        </ul>
    </div>

    @* END SINGLE AUTHOR *@


    @Html.Raw(Model.Body)

</div>