@model Informa.Web.ViewModels.CompaniesAndDeals.DealViewModel

<script type="text/javascript"> (function () { document.title = document.title.replace('*', '@(Model.Deal.Title)'); })(); </script>

@if (!string.IsNullOrEmpty(Model.LogoUrl))
{
    <div class="deal-sponsor">
        @Model.BroughtToYouByText <img src="@(Model.LogoUrl)" />
    </div>
}

<div class="generic-content">
    <h1>@Model.Deal.Title</h1>

    <div class="generic-content__dateline">
        @(Model.Content.DealInfo.PublishedDate.ToDate().ToString("MMM yyyy"))
    </div>
    <h5>@Model.DealsSummaryText</h5>
    <div>
        @(Model.Content.DealSummary)
    </div>
</div>
