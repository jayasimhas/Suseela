@model Informa.Web.ViewModels.SiteDebugging.IToolbarViewModel
@if (Model.Enabled)
{
	<style>
		.debugToolbar {
			background-color: aquamarine;
			position: fixed;
			top: 0;
			width: 100%;
			z-index: 99999;
		}
		.debugToolbarContainer {
			display: none;
		}
	</style>
	<div class="debugToolbar">
		<button class="js-debug-expand-button">@Model.ToggleButtonText</button>
		<div class="debugToolbarContainer">
			@{ Html.RenderPartial("Debug/UserIpAddress", Model.UserIpAddressViewModel); }
		</div>
	</div>
	<script>
		$('.js-debug-expand-button').on('click', function toggle(e) {
			$(e.target).siblings('.debugToolbarContainer').toggle();
		});
	</script>
}