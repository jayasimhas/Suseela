@model ICompanyRegisterMessageViewModel
@if (Model.Display)
{
	<div class="banner banner--register">
		<div class="banner__wrapper">
			<div class="dismiss-button js-dismiss-banner">
				<span>@Model.DismissText</span>
				<svg class="dismiss-button__icon">
					<use xlink:href="/dist/img/svg-sprite.svg#x"></use>
				</svg>
			</div>

			<svg class="banner__lead-icon">
				<use xlink:href="/dist/img/svg-sprite.svg#alert"></use>
			</svg>

			<span>
				@Model.Message <a href="#"><button class="button button--outline">@Model.RegisterText</button></a>
			</span>
		</div>
	</div>
}
