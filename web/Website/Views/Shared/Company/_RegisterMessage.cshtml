@model ICompanyRegisterMessageViewModel
@if (Model.Display)
{
	<div class="banner banner--maintenance">
		<div class="banner__wrapper">
			<div class="dismiss-button js-dismiss-banner">
				<a href="@Model.RegisterLinkUrl">
					@Model.RegisterLinkText
					<svg class="link-hint-arrow">
						<use xlink:href="/dist/img/svg-sprite.svg#right-arrow"></use>
					</svg>
				</a>
			</div>
			<svg class="banner__lead-icon">
				<use xlink:href="/dist/img/svg-sprite.svg#alert"></use>
			</svg>
			<span>
				@Model.Message
			</span>
		</div>
	</div>
}
