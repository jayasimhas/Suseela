@model Informa.Web.ViewModels.IHeaderViewModel
@*@model Informa.Web.Areas.Account.Models.LoginViewModel*@
<header>
    <div class="header__informa-permabanner">
        informa
    </div>

    <div class="advertising--leaderboard">
        <img src="http://placehold.it/728x90">
    </div>

    <div class="header__wrapper clearfix">

        <div class="menu-toggler menu-toggler--mini js-toggle-menu">
            <button class="menu-toggler__button">
                <span>Toggle Menu</span>
            </button>
            Menu
        </div>

        <a href="@Model.LogoUrl"><img class="header__logo" src="@Model.LogoImageUrl"></a>

        <div class="header__user-actions">
			@if (!string.IsNullOrWhiteSpace(Model.WelcomeText))
			{
				<div class="header__friendly-welcome">@Model.WelcomeText</div>
			}

			@*@Request.IsAuthenticated*@
            @if (Model.IsAuthenticated)
            {
				@* Signed In *@
                using (Html.BeginForm("LogOff", "Account", new { area = "Account" }, FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    @*<div class="header__friendly-welcome">Hi, @User.Identity.Name</div>*@
                    <div class="header__my-account">
                        <svg class="header__icons icon-my-account">
                            <use xlink:href="/dist/img/svg-sprite.svg#my-account"></use>
                        </svg>
                        @Html.ActionLink(Model.MyAccountLinkText, "Index", "Manage", new { area = "Account" }, htmlAttributes: new { title = "Manage" })
                    </div>
                    <div class="header__sign-out">
                        <svg class="header__icons icon-sign-out">
                            <use xlink:href="/dist/img/svg-sprite.svg#sign-out"></use>
                        </svg>
                        <a href="javascript:document.getElementById('logoutForm').submit()">@Model.SignOutLinkText</a>
                    </div>
				}
			}
			else
			{
                <div class="header__my-account pop-out__trigger js-toggle-pop-out">
                    <span class="pop-out__trigger-content">
                        <svg class="header__icons icon-register">
                            <use xlink:href="/dist/img/svg-sprite.svg#register"></use>
                        </svg>
                        @Html.ActionLink(Model.RegisterLinkText, "Register", "Account", routeValues: new { area = "Account" }, htmlAttributes: new { id = "registerLink" })
                    </span>
                    <div class="pop-out header__hover--register">
                        <div class="pop-out__internal">
                            <div class="dismiss-button js-dismiss-pop-out">
                                <svg class="dismiss-button__icon">
                                    <use xlink:href="/dist/img/svg-sprite.svg#x"></use>
                                </svg>
                            </div>
                            <h2>@Model.RegisterText</h2>
                            <input class="text-field header__hover-input"
                                   type="text"
                                   placeholder="@Model.UsernamePlaceholderText">
							<!-- @Model.UsernameInvalidText -->
                            <button class="button--filled">@Model.RegisterButtonText</button>
                        </div>
                    </div>
                </div>

                <div class="header__sign-in-out pop-out__trigger js-toggle-pop-out">
                    <span class="pop-out__trigger-content">
                        <svg class="header__icons icon-sign-in">
                            <use xlink:href="/dist/img/svg-sprite.svg#sign-in"></use>
                        </svg>
                        @Html.ActionLink(Model.SignInLinkText, "LoginHeader", "Account", routeValues: new { area = "Account" }, htmlAttributes: new { id = "loginLink" })
                    </span>
                    <div class="pop-out">
                        <div class="pop-out__internal pop-out__internal--flush-right">
                        <div class="dismiss-button js-dismiss-pop-out">
                            <svg class="dismiss-button__icon">
                                <use xlink:href="/dist/img/svg-sprite.svg#x"></use>
                            </svg>
                        </div>
                        <h2 class="pop-out__header">@Model.SignInText</h2>
						@{ Html.RenderPartial("_SignInForm"); }
                        </div>
                    </div>
                </div>
            }


        </div>

        <div class="header-search__wrapper">
            <input class="inf-standard-form-field header-search__field" type="search" placeholder="Search the site">
            <svg class="header__icons header__icons--search js-header-search-trigger">
                <use xlink:href="/dist/img/svg-sprite.svg#search"></use>
            </svg>
            <svg class="header__icons header__icons--dismiss-search js-header-search-trigger">
                <use xlink:href="/dist/img/svg-sprite.svg#x"></use>
            </svg>
        </div>

    </div>

</header>
