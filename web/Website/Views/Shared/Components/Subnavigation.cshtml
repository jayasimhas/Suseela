@using Glass.Mapper.Sc.Web.Mvc
@using Informa.Models.Informa.Models.sitecore.templates.User_Defined.Base_Templates
@model SubnavigationViewModel

<div class="general-header">

    @if (Model.SubnavigationItems.Count() > 0)
    {
        @* Subnavigation Items *@
        <div class="general-header__navigation">
            <a class="is-active" href="@Model.GlassModel._Url">
                @Model.GlassModel.Navigation_Title
            </a>
            @foreach (I___BasePage sn in @Model.SubnavigationItems)
            {
                <a href="@sn._Url">
                    @sn.Navigation_Title
                </a>
            }
        </div>
        <div class="general-header__navigation-scroller--right"></div>
        <div class="general-header__navigation-scroller--left"></div>
    }
</div>
