@model TableauDashboardViewModel

@if (Model.IsRightRail)
{
    <div class="tableau-placeholder-right-rail">
        <h3 class="tableau-heading">@Model.ComponentHeading</h3>
        <script type="text/javascript" src="@Model.JSAPIUrl"></script>
        <div class="tableau-graph">
            <object class="tableauViz" width='@Model.DashboardWidth' height='@Model.DashboardHeight%'>
                <param name="host_url" value="@Model.HostUrl" />
                <param name="name" value="@Model.DashboardName" />
                <param name="tabs" value="@Model.DisplayTabs" />
                <param name="toolbar" value="@Model.DisplayToolbars" />
                <param name='customViews' value='@Model.AllowCustomViews' />
                <param name='filter' value='@Model.Filter' />
                <param name='ticket' value='@Model.TableauTicket' />
            </object>
        </div>
        <p><a href="@Model.LandingPageLink">@Model.LandingPageLinkLable</a></p>
    </div>
}
else
{
    var dashboardWidth = string.IsNullOrWhiteSpace(Model.DashboardWidth) ? "100%" : Model.DashboardWidth;
    var dashboardHeight = string.IsNullOrWhiteSpace(Model.DashboardHeight) ? "100%" : Model.DashboardHeight;
    <div class="tableau-landing">
        <h1>@Model.PageTitle</h1>
        <div class="sub-heading-text">@Model.PageSubheading</div>
        @if (!string.IsNullOrWhiteSpace(@Model.IntroductoryVideoLink) && !string.IsNullOrWhiteSpace(@Model.IntroductoryText))
        {
            <div class="js-toggle-demo">
                <div class="show-demo">
                    <div class="sd">@Model.HideDemoLable<i class="fa fa-chevron-down" aria-hidden="true"></i></div>
                    <div class="hd">@Model.ShowDemoLable<i class="fa fa-chevron-up" aria-hidden="true"></i></div>
                </div>
                <div class="toggle-demo">
                    <div class="demoText">
                        <span>
                            @Model.IntroductoryText
                        </span>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(@Model.IntroductoryVideoLink))
                    {
                        <div class="video-demo">
                            <div class="visible-lg">
                                <div class="video-mini-container">
                                    <div class="embed-responsive embed-responsive-16by9">
                                        <img src="/dist/img/video-thumb.png" data-videotype="wistia" data-videourl="@Model.IntroductoryVideoLink" alt="wistia video" width="100%" class="video-img img-responsive">
                                        <span class="play-icon" style="display: block;"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="visible-sm">
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        <script type="text/javascript" src="@Model.JSAPIUrl"></script>
        <div class="tableau-placeholder">
            <div class="tableau-graph tableau_component__desktop">
                <object class="tableauViz" width='@dashboardWidth' height='@dashboardHeight'>
                    <param name="host_url" value="@Model.HostUrl" />
                    <param name="name" value="@Model.DashboardName" />
                    <param name="tabs" value="@Model.DisplayTabs" />
                    <param name="toolbar" value="@Model.DisplayToolbars" />
                    <param name='customViews' value='@Model.AllowCustomViews' />
                    <param name='filter' value='@Model.Filter' />
                    <param name='ticket' value='@Model.TableauTicket' />
                </object>
            </div>
            @if (Model.IsMobileDashboardAvailable)
            {
                <div class="tableau-graph tableau_component__mobile">
                    <object class="tableauViz" width='@dashboardWidth' height='@dashboardHeight'>
                        <param name="host_url" value="@Model.HostUrl" />
                        <param name="name" value="@Model." />
                        <param name="tabs" value="@Model.DisplayTabs" />
                        <param name="toolbar" value="@Model.DisplayToolbars" />
                        <param name='customViews' value='@Model.AllowCustomViews' />
                        <param name='filter' value='@Model.Filter' />
                        <param name='ticket' value='@Model.TableauTicket' />
                    </object>
                </div>
            }
            <div class="articleText">
                <span>
                    @Model.ToolExplanation
                </span>
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.IsMobileDashboardAvailable);
}

