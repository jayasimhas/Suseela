@using Glass.Mapper.Sc.Web.Mvc
@model AdvertisementViewModel

@if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    @Html.Glass().Editable(x => x.GlassModel.Slot_ID)
    @Html.Glass().Editable(x => x.GlassModel.Zone)
}
@if (!string.IsNullOrEmpty(Model.GlassModel.Slot_ID) && !string.IsNullOrEmpty(Model.GlassModel.Zone))
{
    <div class="article-preview__ad advertising">
        <span class="advertising__label">@Model.AdvertisementText</span>
        <script>
            OAS_AD('@Model.GlassModel.Slot_ID', '@Model.GlassModel.Zone');
        </script>
    </div>
}