@model FeaturedArticleViewModel

@if (Model.DisplayImage && !string.IsNullOrEmpty(Model.Image.ImageSource))
{
    <img class="topic-featured-article__image" src="@Model.Image.ImageSource">
}

@if(Model != null && Model.GlassModel != null) {
<div class="article-metadata">
