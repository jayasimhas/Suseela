@model ISignInViewModel

<div class="js-login-container">
	<div class="pop-out__form-error">
		@Model.SignInInvalidText
	</div>
	<input name="username"
		   class="pop-out__input header__hover-input"
		   placeholder="@Model.SignInUsernamePlaceholderText"
		   type="text">
	<input name="password"
		   class="pop-out__input header__hover-input"
		   placeholder="@Model.SignInPasswordPlaceholderText"
		   type="password">

	<div class="pop-out__form-actions-wrapper">
		<div>
			<a class="pop-out__form-actions js-show-forgot-password" href="#">@Model.SignInResetPasswordLinkText</a>
			<div class="pop-out__sign-in-remember-me">
				<input name="persist" type="checkbox"> @Model.SignInRememberMeText
			</div>
		</div>
		<div class="sign-in__submit-wrapper">
			<button class="button--filled sign-in__submit js-sign-in-submit" data-login-url="/Account/api/LoginWebUserApi/Login/" data-login-redirect-url="">@Model.SignInButtonText</button>
		</div>
	</div>
</div>

<div class="pop-out__sign-in-forgot-password js-reset-password-container">
	<div class="alert-success js-reset-password-success">
		<svg class="alert__icon">
			<use xlink:href="/dist/img/svg-sprite.svg#check"></use>
		</svg>
		<p>@Model.ResetPasswordSuccessText</p>
	</div>
	<div class="pop-out__form-error js-reset-password-error-container">
		<p class="js-reset-password-error js-reset-password-error-email">@Model.ResetPasswordErrorEmailText</p>
		<p class="js-reset-password-error js-reset-password-error-general">@Model.ResetPasswordErrorGeneralText</p>
	</div>

	<div class="pop-out__sign-in-forgot-password-nested js-reset-password-request-form">
		@Model.ResetPasswordBody
		<input name="email"
			   class="pop-out__input"
			   type="text"
			   placeholder="@Model.ResetPasswordEmailPlaceholderText">
		<div class="pop-out__form-actions-wrapper">
			<div></div>
			<div class="sign-in__submit-wrapper">
				<button class="button--filled sign-in__submit js-reset-password-request-submit" data-reset-url="/Account/api/ResetPasswordApi/Generate/">@Model.ResetPasswordSubmitText</button>
			</div>
		</div>
	</div>
	<p class="pop-out__details pop-out__details--inset u-italic u-centered">
		@Model.ResetPasswordContactText
	</p>

</div>
