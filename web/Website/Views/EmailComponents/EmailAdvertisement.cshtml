@inherits CustomGlassView<Informa.Web.ViewModels.Emails.EmailAdvertisementViewModel>

<table class="mobile-ad" border="0" cellpadding="0" cellspacing="0" width="100%">
	<tr>
		<td class="mobile-ad__cell">
			<p class="mobile-ad__title">@Model.AdHeader</p>
			<p class="mobile-ad__image">

				@if (IsInEditingMode)
				{
				    <!-- this is just for easy experience editing, doesn't need to be email-html safe -->
				    <div>Slot Id: @Editable(Model.GlassModel, m => m.Slot_ID) </div>
				    <div>Zone: @Editable(Model.GlassModel, m => m.Zone) </div>
				}
				else
				{
					<img src="http://placekitten.com/320/100?random">
				    <!-- throw these into javascript, I think? -->
				    @Model.GlassModel.Zone
				    @Model.GlassModel.Slot_ID
				}
			</p>
		</td>
	</tr>
</table>