@inherits CustomGlassView<Informa.Web.ViewModels.Emails.EmailAdvertisementViewModel>
    <table>
    <tr>
        <td align="center" valign="top" class="templateHeader" style="background:#FFFFFF none no-repeat center/cover;mso-line-height-rule: exactly;-ms-text-size-adjust: 100%;-webkit-text-size-adjust: 100%;background-color: #FFFFFF;background-image: none;background-repeat: no-repeat;background-position: center;background-size: cover;border-top: 0;border-bottom: 0;padding-top: 0;padding-bottom: 15px;">
            <!--[if gte mso 9]>
