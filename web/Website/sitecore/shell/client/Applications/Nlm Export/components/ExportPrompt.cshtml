@using Sitecore.Mvc
@using Sitecore.Web.UI.Controls.Common.UserControls
@model Sitecore.Mvc.Presentation.RenderingModel

@{
    Layout = null;

    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    //rendering.Requires.Script("nlmexport", "ExportPrompt.js");

    var htmlAttributes = rendering.HtmlAttributes;
}

<div @htmlAttributes class="">

    <form>
        <label>Select a Publication Type: </label><br/>
        <input type="radio" name="pubtype" value="epub" checked> epub<br>
        <input type="radio" name="pubtype" value="ecorrected"> ecorrected<br>
        <input type="radio" name="pubtype" value="eretracted"> eretracted

        <br/><br/>

        <input type="checkbox" name="delete"/> Send 'delete' file
    </form>

</div>