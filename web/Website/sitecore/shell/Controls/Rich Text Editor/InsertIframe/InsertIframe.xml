            <Border Padding="10px 4px 10px 10px">
			<Memo ID="memIframeMobile" Width="300px"></Memo>              
            </Border>
		  
		   <Border Padding="0px 4px 0px 10px">
              <Literal ID="Header" Text="Header"  Width="40px" style="font-size:15px;"/>
            </Border>
            <Border Padding="10px 4px 10px 10px">
			<Edit ID="memIframeHeader" Width="300px"></Edit>             
            </Border>
			
			<Border Padding="0px 4px 0px 10px">
              <Literal ID="Title" Text="Title"  Width="40px" style="font-size:15px;"/>
