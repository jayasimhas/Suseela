		  <Border Padding="0px 4px 0px 10px">
              <Literal ID="DesktopIframe" Text="Desktop Embed"  Width="40px" style="font-size:15px;"/>
            </Border>
            <Border Padding="10px 4px 10px 10px">
			<Memo ID="memIframeDesktop" Width="300px"></Memo>              
            </Border>
		  
		   <Border Padding="0px 4px 0px 10px">
              <Literal ID="MobileIframe" Text="Mobile Embed"  Width="40px" style="font-size:15px;"/>
