<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <RichText.InsertIframe>
    <FormDialog Icon="People/32x32/movie_run.png" Header="Insert Iframe" Text="Fill the Iframe details" OKButton="Insert">
	 
      <script Type="text/javascript" Language="javascript" Src="/sitecore/shell/controls/rich text editor/InsertIframe/InsertIframe.js">.</script>	 
	<script type="text/javascript">
jQuery(function($) {
    $('#Header').live('keyup', function(e) {
        $('#previewNote div.body').text($(this).val());
    });
});​
	</script>  
      <CodeBeside Type="SitecoreExtensions.InsertIframe, SitecoreExtensions"/>
      <GridPanel Width="100%" Height="100%" Style="table-layout:fixed">
	  <Literal ID="Multimedia" Text="Multimedia"  Width="40px" style="font-size:30px;"/>
