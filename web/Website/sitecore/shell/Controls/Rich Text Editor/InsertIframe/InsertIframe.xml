            <Border Padding="10px 4px 10px 10px">
			<Edit ID="memIframeCaption" Width="300px"></Edit>             
            </Border>
			
			<Border Padding="0px 4px 0px 10px">
              <Literal ID="MobileIframeSource" Text="Source"  Width="40px" style="font-size:15px;"/>
            </Border>
            <Border Padding="10px 4px 10px 10px">
			<Edit ID="memIframeSource" Width="300px"></Edit>              
            </Border>		
		
          </GridPanel>       
      </GridPanel>
    </FormDialog>
