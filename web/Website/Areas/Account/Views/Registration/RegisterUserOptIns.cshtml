@model Informa.Web.Areas.Account.ViewModels.Registration.RegisterUserOptInsViewModel

<div class="page-registration js-register-user-container">
	<h1 class="page-registration__header">@Model.Title</h1>
	<h2 class="page-registration__subheader">@Model.SubTitle</h2>
	<p class="page-registration__introduction">@Model.Body</p>
	<hr />
	<form class="form-registration-optins"
		  data-on-submit="/Account/api/RegistrationApi/SetOptIns/"
		  data-on-success="/">

		<p class="page-registration__error
		   js-register-user-error
		   js-register-user-error-general">
			@Model.GeneralErrorText
		</p>

		<div>
			<div class="page-registration__tos-confirm">
				<input name="newsletters"
					   type="checkbox"
					   checked="checked"
					   data-checkbox-type="boolean"> <label for="newsletters">@Model.NewslettersLabelText</label>
			</div>
			<div class="page-registration__tos-confirm">
				<input name="offers"
					   type="checkbox"
					   data-checkbox-type="boolean"
					   data-checkbox-boolean-type="reverse"> <label for="offers">@Model.OffersLabelText</label>
			</div>

			<div class="page-registration__submit-wrapper">
				<button type="submit" class="button--filled js-register-user-optins-submit">@Model.SubmitText</button>
			</div>
		</div>
	</form>
</div>
