@model Informa.Web.Areas.Account.ViewModels.Registration.RegisterUserOptInsViewModel

<div class="page-registration js-register-user-container">
	<h1 class="page-registration__header">@Model.Title</h1>
	<h2 class="page-registration__subheader">@Model.SubTitle</h2>
	<p class="page-registration__introduction">@Model.Body</p>
	<hr />
	<form class="form-registration-optins"
		  data-on-submit="/Account/api/PreferencesApi/Update/"
		  data-on-success="/">

		<p class="page-registration__error
		   js-form-error
		   js-form-error-general">
			@Model.GeneralErrorText
		</p>

		<div>
			<div class="page-registration__tos-confirm">
				<input 	name="NewsletterOptIn"
						id="NewsletterOptIn"
					   	type="checkbox"
					   	checked="checked"
					   	data-checkbox-type="boolean">
				<label class="checkbox-label" for="NewsletterOptIn">@Model.NewslettersLabelText</label>
			</div>
			<div class="page-registration__tos-confirm">
				<input 	name="DoNotSendOffersOptIn"
						id="DoNotSendOffersOptIn"
					   	type="checkbox"
					   	data-checkbox-type="boolean">
				<label class="checkbox-label" for="DoNotSendOffersOptIn">@Model.OffersLabelText</label>
			</div>

			<div class="page-account__submit-wrapper">
				<button type="submit" class="button--filled">@Model.SubmitText</button>
			</div>
		</div>
	</form>
</div>
