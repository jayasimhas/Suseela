@model Informa.Web.Areas.Account.ViewModels.ResetPassword.ChangeViewModel

<div class="page-account js-reset-password-container">
	<h1 class="page-account__header">@Model.Title</h1>
	<input	name="token"
		   	type="hidden"
		   	value="@Model.Token">
	@if (Model.IsValidToken)
	{

		<h4 class="page-account__subheader">Dear #first_name# #last_name#,</h4>
		<p class="page-account__introduction">@Model.ResetBody</p>
		<hr>
		<form data-on-submit="/Account/api/ResetPasswordApi/Change/">
			<div class="page-account__field-wrapper">
				<label 	class="page-account__text-label" for="newPassword">@Model.NewPasswordLabelText</label>
				<input 	id="newPassword"
						name="newPassword"
					   	class=""
					   	placeholder="@Model.NewPasswordPlaceholderText"
					   	type="password">
			</div>
			<div class="page-account__field-wrapper">
				<label 	class="page-account__text-label"
						for="newPasswordRepeat">@Model.NewPasswordRepeatLabelText</label>
				<input 	name="newPasswordRepeat"
						id="newPasswordRepeat"
				   		class=""
				   		placeholder="@Model.NewPasswordRepeatPlaceholderText"
						type="password">
			</div>
			<hr>
			<button type="submit" class="button--filled js-reset-password-change-submit">@Model.SubmitButtonText</button>
		</form>
		<ul>
			<li class="js-reset-password-error js-reset-password-error-requirements" style="display: none;">@Model.ResetErrorRequirementsText</li>
			<li class="js-reset-password-error js-reset-password-error-mismatch" style="display: none;">@Model.ResetErrorMismatchText</li>
			<li class="js-reset-password-error js-reset-password-error-general" style="display: none;">@Model.ResetErrorGeneralText</li>
		</ul>
		<div class="js-reset-password-success" style="display: none;">
			<p>@Model.ResetSuccessText</p>
		</div>
	}
	else
	{
		if (Model.TokenFound)
		{
			<div>
				<hr />
				<p>@Model.RetryBody</p>
				<button class="button--filled js-reset-password-retry-submit" data-retry-url="/Account/api/ResetPasswordApi/Retry/">@Model.SubmitButtonText</button>
				<div class="js-reset-password-error-general" style="display: none;">
					<p>@Model.RetryErrorGeneralText</p>
				</div>
				<div class="js-reset-password-success" style="display: none;">
					<p>@Model.RetrySuccessText</p>
				</div>
			</div>
		}
		else
		{
			<hr>
			<p>@Model.TokenNotFoundBody</p>
		}
	}
</div>
