{% if alertType == false %}
	{% set alertType = &quot;success&quot; %}
{% endif %}
{% if alertIcon == false %}
	{% set alertIcon = &quot;check&quot; %}
{% endif %}
{% if alertText == false %}
	{% set alertText = &quot;Good work! The thing you did was a success.&quot; %}
{% endif %}

&lt;div class=&quot;alert-{{alertType}}&quot; style=&quot;display: block !important;&quot;&gt;
    &lt;svg class=&quot;alert__icon&quot;&gt;
        &lt;use xlink:href=&quot;/web/Website/dist/img/svg-sprite.svg#{{alertIcon}}&quot;&gt;&lt;/use&gt;
    &lt;/svg&gt;
    &lt;p&gt;{{alertText}}&lt;/p&gt;
&lt;/div&gt;

&lt;!--
&lt;div class=&quot;alert-error&quot; style=&quot;display: block !important;&quot;&gt;
    &lt;svg class=&quot;alert__icon&quot;&gt;
        &lt;use xlink:href=&quot;/web/Website/dist/img/svg-sprite.svg#alert&quot;&gt;&lt;/use&gt;
    &lt;/svg&gt;
    &lt;p&gt;Uh oh, something didn't work. Please try again.&lt;/p&gt;
&lt;/div&gt;
--&gt;
