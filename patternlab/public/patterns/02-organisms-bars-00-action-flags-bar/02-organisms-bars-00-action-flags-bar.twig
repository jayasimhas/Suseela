						&lt;use xlink:href=&quot;/web/Website/dist/img/svg-sprite.svg#linkedin&quot;&gt;&lt;/use&gt;
					&lt;/svg&gt;
				&lt;/a&gt;
				&lt;a href=&quot;https://twitter.com/intent/tweet?text=What%e2%80%99s+On+CEO+Andrew+Witty%e2%80%99s+To-Do+List+Before+Exiting+GSK&amp;amp;url=http%3a%2f%2fscrip.dev.ibi.velir.com%2farticles%2f2016%2f04%2f27%2fwhats-on-ceo-andrew-wittys-todo-list-before-exiting-gsk&quot; class=&quot;link__no-hover click-utag&quot;&gt;
					&lt;svg class=&quot;action-flag__icon action-flag__icon--twitter&quot;&gt;
						&lt;use xlink:href=&quot;/web/Website/dist/img/svg-sprite.svg#twitter&quot;&gt;&lt;/use&gt;
					&lt;/svg&gt;
				&lt;/a&gt;
			&lt;/li&gt;
			{% endif %}
		&lt;/ul&gt;
	&lt;/div&gt;
	{% if tags == true %}
	&lt;div class=&quot;article-tags-bar&quot;&gt;
			&lt;span class=&quot;article-tags-bar__label&quot;&gt;Tags:&lt;/span&gt;

			{% include &quot;molecules-bar-separated-list&quot; %}
	&lt;/div&gt;
	{% else %}
	&lt;div&gt;

	&lt;/div&gt;
	{% endif %}
&lt;/div&gt;
