
<div class="input-group l-table">
    <label for="search-keyword-input" class="visuallyhidden">Search by keyword</label>
    <input ng-controller="searchQueryController as query"
           ng-model="query.keywords"
           ng-model-options="{ debounce: { 'default': query.typingTimeout } }"
           ng-change="query.update()"
           type="text"
           id="search-keyword-input"
           name="search-keyword-input"
           placeholder="Search by keyword"
           class="l-full" />
</div>